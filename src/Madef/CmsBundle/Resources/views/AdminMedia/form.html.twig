{% extends "MadefCmsBundle:Layout:admin.html.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
    {{ form_start(form, { 'style': 'horizontal' }) }}
    {{ form_end(form) }}
    <div class="row">
        <div class="col-lg-offset-2 col-lg-10">
            {% if  media.isImage() %}
                <img class="img-responsive" src="{{ url('madef_cms_front_display_media', {identifier: media.getIdentifier(), version: media.getVersion().getId()}) }}" alt="{{ media.getName() }}" />
            {% else %}
                <a href="{{ url('madef_cms_front_display_media', {identifier: media.getIdentifier(), version: media.getVersion().getId()}) }}">{{ media.getName() }}</a>
            {% endif %}
        </div>
{% endblock %}
